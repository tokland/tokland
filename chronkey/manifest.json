{
  "name": "Chronkey",
  "description": "Submit links to P2P clients (MLDonkey, QBitTorrent, ...)",
  "version": "0.1.0",
  "background_page": "background.html",
  "options_page": "options.html",
   "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "ftp://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png"
  }
}
